<div class="overlay-container">
  <img src="{{ section.settings.desktop_image | image_url }}" class="desktop overlay-image">
  <img src="{{ section.settings.mobile_image | image_url }}" class="mobile overlay-image">

  <div class="content">
      <h3>{{ section.settings.heading }}</h3>
      {{ section.settings.content }}
  </div>
</div>
{% style %}
.overlay-container {
  position: relative;
  width: 100%;
}

.overlay-image {
  display: block;
  width: 100%;
  height: auto;
}

.content {
      position: absolute;
    top: 50%;
    left: 23%;
    transform: translate(-50%, -50%);
    width: 30%;
  color: white;
  font-size: 20px;
  padding: 20px;
}
.mobile{
  display:none;
}
  @media and screen(max-width:650px){
    .desktop{
      display:none;
    }
    .mobile{
      display:block;
    }
  }
{% endstyle %}
{% schema %}
{
  "name": "Custom Overlay section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Heading",
      "id": "heading"
    },
    {
      "type": "richtext",
      "label": "Content",
      "id": "content"
    },
    {
      "type": "image_picker",
      "label": "Desktop Image",
      "id": "desktop_image"
    },
    {
      "type": "image_picker",
      "label": "Mobile Image",
      "id": "mobile_image"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Cutsom Overlay "
    }
  ]
}
{% endschema %}

